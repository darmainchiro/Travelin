    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout android:layout_height="150dp" android:layout_width="250dp">

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/image" android:src="@drawable/blank" android:scaleType="centerCrop"/>

